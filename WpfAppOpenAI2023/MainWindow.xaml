<Window x:Class="WpfAppOpenAI2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppOpenAI2023"
        mc:Ignorable="d"
        Title="OpenAI. Chat GPT usage sample. Y2023" Height="450" Width="800">
    <Grid>

        <Label Content="OpenAI (Chat GPT3) API Key" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,41,18,0" TextWrapping="NoWrap" Height="23" Text="" x:Name="txtSecretKey" VerticalAlignment="Top"/>

        <Label Content="Your question" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox Height="46" Margin="10,101,18,0" TextWrapping="Wrap" Text="Hello Robot from another Robot!" x:Name="txtQuestion" VerticalAlignment="Top"/>

        <Button Content="Ask AI" Margin="10,152,18,0" VerticalAlignment="Top" Click="Button_Click"/>

        <Label Content="Answer" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,208,18,10" TextWrapping="Wrap" Text="" x:Name="txtAnswer"/>

    </Grid>
</Window>
